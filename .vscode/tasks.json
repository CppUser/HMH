{
    "tasks": [
        {
            "type": "shell",
            "label": "Build Debug",
            "windows": {
                "command": "${workspaceFolder}/build.bat"
            },
            "args": ["debug"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "type": "shell",
            "label": "Build Release",
            "windows": {
                "command": "${workspaceFolder}/build.bat"
            },
            "args": ["release"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "type": "shell",
            "label": "Clean Build",
            "windows": {
                "command": "rmdir",
                "args": ["/s", "/q", "build"]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        }
    ],
    "version": "2.0.0"
}